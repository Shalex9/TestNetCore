@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Регистрация";
}

<div id="triggerModal" data-toggle="modal" data-target="#myModal" style="display:none;" class="log-in">Register</div>
<div class="background-image"></div>
<div class="overlay"></div>

<div class="modal fade"
     role="dialog"
     tabindex="-1"
     id="myModal"
     data-backdrop="static"
     data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center;">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="modal-body">
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h4 class="text-info text-center">
                        Вы успешно прошли аутентификацию в <strong>@Model.LoginProvider</strong>. <br />
                        Пожалуйста, подтвердите адрес электронной почты <br />
                        для этого сайта, нажав кнопку Зарегистрироваться,<br />
                        чтобы завершить вход в систему.
                    </h4>
                    <div class="form-group" style="display:flex; justify-content: center;">
                        <input asp-for="Input.Email" class="form-control" readonly />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <button type="submit" class="btn btn-primary" style="margin-left: 20px;">Зарегистрироваться</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $(document).ready(function () {
        setTimeout(function () { $("#triggerModal").trigger("click"); }, 500);
    });
</script>   